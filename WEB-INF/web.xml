<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaeehttp://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<servlet>
		<servlet-name>controller</servlet-name>
		<servlet-class>org.webapp.controller.Controller</servlet-class>
		<init-param>
			<param-name>requireSSL</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>localNetAddr</param-name>
			<param-value>127.0.0.1</param-value>
		</init-param>
		<init-param>
			<param-name>localNetPrefix</param-name>
			<param-value>128.237.</param-value>
		</init-param>
		<init-param>
			<param-name>jdbcDriverName</param-name>
			<param-value>com.mysql.jdbc.Driver</param-value>
		</init-param>
		<init-param>
			<param-name>jdbcURL</param-name>
			<param-value>jdbc:mysql:///webapp</param-value>
		</init-param>
		<init-param>
			<param-name>user_table</param-name>
			<param-value>xinkaih_user</param-value>
		</init-param>
		<init-param>
			<param-name>friendship_table</param-name>
			<param-value>xinkaih_friendship</param-value>
		</init-param>
		<init-param>
			<param-name>photo_table</param-name>
			<param-value>xinkaih_photo</param-value>
		</init-param>
		<init-param>
			<param-name>story_table</param-name>
			<param-value>xinkaih_story</param-value>
		</init-param>
		<init-param>
			<param-name>comment_table</param-name>
			<param-value>xinkaih_comment</param-value>
		</init-param>
	</servlet>
	<servlet>
	<servlet-name>image</servlet-name>
	<servlet-class>org.webapp.view.ImageServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>controller</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>controller</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/image</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>welcome</welcome-file>
	</welcome-file-list>
	<session-config>
		<session-timeout>
			30
		</session-timeout>
	</session-config>
</web-app>